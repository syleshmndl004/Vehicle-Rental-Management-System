{% include 'header.twig' %}

<h2>Vehicle Inventory</h2>

{% if message %}
    <div class="alert alert-success">{{ message }}</div>
{% endif %}
{% if error %}
    <div class="alert alert-danger">{{ error }}</div>
{% endif %}

<div class="card">
    <div class="card-body">
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Plate Number</th>
                    <th>Model</th>
                    <th>Type</th>
                    <th>Daily Rate</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% if vehicles is not empty %}
                    {% for vehicle in vehicles %}
                        <tr>
                            <td>{{ vehicle.plate_number }}</td>
                            <td>{{ vehicle.model }}</td>
                            <td>{{ vehicle.type }}</td>
                            <td>${{ vehicle.daily_rate|number_format(2) }}</td>
                            <td>
                                {% if vehicle.current_status == 'Available' %}
                                    <span class="badge bg-success">Available</span>
                                {% else %}
                                    <span class="badge bg-danger">Rented</span>
                                {% endif %}
                            </td>
                            <td class="actions">
                                {% if session.user_id %}
                                    {% if vehicle.current_status == 'Available' %}
                                        <a href="book.php?id={{ vehicle.id }}" class="btn btn-sm btn-success">Book Now</a>
                                    {% endif %}
                                    {% if session.is_admin %}
                                        <a href="edit.php?id={{ vehicle.id }}" class="btn btn-sm btn-warning">Edit</a>
                                        <a href="delete.php?id={{ vehicle.id }}" class="btn btn-sm btn-danger" onclick="return confirm('Delete this vehicle?')">Delete</a>
                                    {% endif %}
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                {% else %}
                    <tr>
                        <td colspan="6" class="text-center">No vehicles found.</td>
                    </tr>
                {% endif %}
            </tbody>
        </table>
    </div>
</div>

{% include 'footer.twig' %}
